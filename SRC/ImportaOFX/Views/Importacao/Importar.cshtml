
@{
    ViewBag.Title = "Importação de Arquivos OFX";
}

<br />
<h2>Importação de Arquivos OFX</h2>
<hr />

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formImportaOFX", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="container">
        <div class="card">
            <h4 class="card-header text-white bg-info">Importar Arquivos de Conciliação - OFX</h4>
            <div class="card-body">
                <div class="form-group">
                    <div class="col-md-10">
                        <p>Selecione um ou mais arquivos OFX que deseja importar!</p>
                        <input type="file" name="files" multiple />
                    </div>
                    <br />
                    <div class="col-md-10">
                        <button id="visualizar" type="submit" class="btn btn-primary">Importar</button>
                    </div>
                </div>
            </div>
        </div>
        @if (TempData["Sucesso"] != null)
        {
            <br />
            <div class="row">
                <div class="col-md-12">
                    <div class="alert alert-success">
                        @TempData["Sucesso"]
                    </div>
                </div>
            </div>
        }
    </div>
}